  <script>
    const correctAnswers = {
      q1: "Beyaz",
      q2: "M5"
    };

    const userAnswers = {};

    function answer(questionId, selected) {
      userAnswers[questionId] = selected;

      if (selected === correctAnswers[questionId]) {
        document.getElementById(questionId).classList.add('hidden');

        if (questionId === "q1") {
          document.getElementById("q2").classList.remove('hidden');
        } else if (questionId === "q2") {
          document.getElementById("result").style.display = "block";
        }
      } else {
        alert("Hmm... Bir daha dene aÅŸkÄ±m ðŸ™ˆ");
      }
    }
